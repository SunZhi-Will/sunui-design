{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": [
      "@types/react",
      "@types/jest",
      "@testing-library/jest-dom"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@sunui-design/*": [
        "packages/*/src"
      ],
      "@storybook/nextjs": [
        "node_modules/@storybook/nextjs"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}